{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": false,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
        "declaration": false,
		"skipLibCheck": true,
		"types": [
			"chai",
			"cucumber",
			"node",
			"protractor"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"compileOnSave": true,
	"exclude": [
		"node_modules/*",
		"**/*-aot.ts",
		"typescript"
	]
}